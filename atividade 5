def precopagar(valorkm , valorrotacao):
    return valorkm + valorrotacao
def km (kmrodados):
  return kmrodados * 0,15
def rotacao(temporotacao):
  return temporotacao * 60

kmrodados = float(input("Qual a quantidade de Km rodados pelo veículo atual?"))
temporotacao = float(input("Por quantos dias o carro foi utilizado?"))

valorkm = km(kmrodados)
valorrotacao = rotacao(temporotacao)
valorfinal = precopagar(kmrodados, temporotacao)
print("o valor a ser pago é de:",valorfinal)
